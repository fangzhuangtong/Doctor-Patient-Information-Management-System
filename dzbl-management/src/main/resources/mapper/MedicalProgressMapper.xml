<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hello.mapper.MedicalProgressMapper">
    
    <select id="selectAll" resultType="com.example.hello.entity.MedicalProgress">
        SELECT * FROM medical_progress
    </select>
    
    <select id="selectByCondition" resultType="com.example.hello.entity.MedicalProgress">
        SELECT * FROM medical_progress
        <where>
            <if test="recordType != null and recordType != ''">
                AND record_type = #{recordType}
            </if>
            <if test="doctorId != null">
                AND doctor_id = #{doctorId}
            </if>
            <if test="recordId != null">
                AND record_id = #{recordId}
            </if>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>
    
    <select id="selectById" resultType="com.example.hello.entity.MedicalProgress">
        SELECT * FROM medical_progress WHERE report_id = #{reportId}
    </select>
    
    <insert id="insert" parameterType="com.example.hello.entity.MedicalProgress">
        INSERT INTO medical_progress (
            record_type, record_id, content, doctor_id, user_id
        )
        VALUES (
            #{recordType}, #{recordId}, #{content}, #{doctorId}, #{userId}
        )
    </insert>
    
    <update id="update" parameterType="com.example.hello.entity.MedicalProgress">
        UPDATE medical_progress
        <set>
            <if test="recordType != null">record_type = #{recordType},</if>
            <if test="content != null">content = #{content},</if>
            <if test="userId != null">user_id = #{userId},</if>
        </set>
        WHERE report_id = #{reportId}
    </update>
    
    <delete id="deleteById">
        DELETE FROM medical_progress WHERE report_id = #{reportId}
    </delete>
</mapper> 