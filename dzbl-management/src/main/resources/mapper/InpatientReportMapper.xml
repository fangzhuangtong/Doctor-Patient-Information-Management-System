<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hello.mapper.InpatientReportMapper">
    
    <select id="selectAll" resultType="com.example.hello.entity.InpatientReport">
        SELECT * FROM inpatient_report
    </select>
    
    <select id="selectByCondition" resultType="com.example.hello.entity.InpatientReport">
        SELECT * FROM inpatient_report
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="doctorId != null">
                AND doctor_id = #{doctorId}
            </if>
            <if test="reportType != null and reportType != ''">
                AND report_type = #{reportType}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>
    
    <select id="selectById" resultType="com.example.hello.entity.InpatientReport">
        SELECT * FROM inpatient_report WHERE report_id = #{reportId}
    </select>
    
    <insert id="insert" parameterType="com.example.hello.entity.InpatientReport">
        INSERT INTO inpatient_report (
            user_id, report_type, doctor_id, diagnosis, medication_advice
        )
        VALUES (
            #{userId}, #{reportType}, #{doctorId}, #{diagnosis}, #{medicationAdvice}
        )
    </insert>
    
    <update id="update" parameterType="com.example.hello.entity.InpatientReport">
        UPDATE inpatient_report
        <set>
            <if test="reportType != null">report_type = #{reportType},</if>
            <if test="diagnosis != null">diagnosis = #{diagnosis},</if>
            <if test="medicationAdvice != null">medication_advice = #{medicationAdvice},</if>
        </set>
        WHERE report_id = #{reportId}
    </update>
    
    <delete id="deleteById">
        DELETE FROM inpatient_report WHERE report_id = #{reportId}
    </delete>
</mapper> 