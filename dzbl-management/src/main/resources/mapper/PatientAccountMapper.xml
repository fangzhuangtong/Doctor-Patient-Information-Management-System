<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hello.mapper.PatientAccountMapper">
    
    <select id="selectAll" resultType="com.example.hello.entity.PatientAccount">
        SELECT user_id, username FROM patient_account
    </select>
    
    <select id="selectByCondition" resultType="com.example.hello.entity.PatientAccount">
        SELECT user_id, username FROM patient_account
        <where>
            <if test="username != null and username != ''">
                AND username LIKE CONCAT('%', #{username}, '%')
            </if>
        </where>
    </select>
    
    <select id="selectById" resultType="com.example.hello.entity.PatientAccount">
        SELECT * FROM patient_account WHERE user_id = #{userId}
    </select>
    
    <select id="selectByUsername" resultType="com.example.hello.entity.PatientAccount">
        SELECT * FROM patient_account WHERE username = #{username}
    </select>
    
    <insert id="insert" parameterType="com.example.hello.entity.PatientAccount" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO patient_account (username, password)
        VALUES (#{username}, #{password})
    </insert>
    
    <update id="updatePassword">
        UPDATE patient_account SET password = #{password}
        WHERE user_id = #{userId}
    </update>
    
    <delete id="deleteById">
        DELETE FROM patient_account WHERE user_id = #{userId}
    </delete>
</mapper> 