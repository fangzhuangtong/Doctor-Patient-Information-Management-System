<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hello.mapper.ConsultationMapper">
    
    <select id="selectAll" resultType="com.example.hello.entity.Consultation">
        SELECT * FROM consultation
    </select>
    
    <select id="selectByCondition" resultType="com.example.hello.entity.Consultation">
        SELECT * FROM consultation
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="doctorId != null">
                AND doctor_id = #{doctorId}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
        ORDER BY consult_time DESC
    </select>
    
    <select id="selectById" resultType="com.example.hello.entity.Consultation">
        SELECT * FROM consultation WHERE consult_id = #{consultId}
    </select>
    
    <insert id="insert" parameterType="com.example.hello.entity.Consultation">
        INSERT INTO consultation (
            user_id, doctor_id, consult_type, content, status
        )
        VALUES (
            #{userId}, #{doctorId}, #{consultType}, #{content}, #{status}
        )
    </insert>
    
    <update id="update" parameterType="com.example.hello.entity.Consultation">
        UPDATE consultation
        <set>
            <if test="status != null">status = #{status},</if>
            <if test="replyContent != null">reply_content = #{replyContent},</if>
        </set>
        WHERE consult_id = #{consultId}
    </update>
    
    <delete id="deleteById">
        DELETE FROM consultation WHERE consult_id = #{consultId}
    </delete>
</mapper> 